{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl":"./src",
    "paths": {
      "@/*": ["*"]  
    },  
    "types": ["node"],
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/**/*", "src/infrastructure/database/.ts","types", "src/application/use-cases/user/arena/.ts"],
  "exclude": ["node_modules", "dist",]
}